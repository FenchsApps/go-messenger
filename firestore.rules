
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is part of a chat
    function isChatParticipant(chatId) {
      let participants = chatId.split('_');
      return request.auth.uid in participants;
    }

    match /chats/{chatId}/messages/{messageId} {
      // Allow read if the user is a participant of the chat
      allow read: if request.auth != null && isChatParticipant(chatId);
      
      // Allow create if the user is authenticated and is the sender
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      
      // No one can update or delete messages
      allow update, delete: if false;
    }
  }
}
