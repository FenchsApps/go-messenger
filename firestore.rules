rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{chatId}/messages/{messageId} {
      // For this prototype, we are not using Firebase Auth, so we can't check request.auth.uid.
      // This rule allows any client to read/write, which is insecure for production
      // but acceptable for our current setup.
      allow read, write: if true;
    }
  }
}
